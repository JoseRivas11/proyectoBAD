@model proyectoBAD.ViewModels.EquipoViewModel

@{
    ViewBag.Title = "Admon. Equipos";
    ViewBag.PageHeader = "Crear Equipos";
}
@section customStyles{
    @Styles.Render("~/bundles/dataTableStyles")
}


<div class="col-md-12">
    @using (Html.BeginForm((String)ViewBag.Action, "Equipo", FormMethod.Post, htmlAttributes: new { role = "form", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Equipo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            @if (ViewBag.Button == "Editar")
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.IDEQ, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.IDEQ)
                            @Html.HiddenFor(model => model.IDEQ)
                        </p>
                    </div>
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(model => model.NOMEQ, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.NOMEQ, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMEQ, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ESPECEQ, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.ESPECEQ, htmlAttributes: new { @class = "form-control", rows = 3 })
                    @Html.ValidationMessageFor(model => model.ESPECEQ, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDCATEQ, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.IDCATEQ, Model.categoriaEquipo, "Seleccionar...",
                   htmlAttributes: new { @class = "form-control", id = "lista" })
                    @Html.ValidationMessageFor(model => model.IDCATEQ, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <a class="btn btn-success" href="@Url.Action("Index", "CategoriaEquipo")">
                        <i class="fa fa-fw fa-plus"></i>Nueva
                    </a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ViewBag.Button" class="btn btn-primary" />
                </div>
            </div>

        </div>

    }

    <div>
        <a href="@Url.Action("Index", "Equipo")" class="btn btn-default">
            <i class="fa fa-fw fa-arrow-left"></i>Volver a la lista de equipos
        </a>
    </div>

   

</div>
@section customScripts{
    @Scripts.Render("~/bundles/formValidationScripts")
    
}
