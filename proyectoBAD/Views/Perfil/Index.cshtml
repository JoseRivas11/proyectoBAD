@model IEnumerable<proyectoBAD.ViewModels.PerfilViewModel>

@{
    ViewBag.Title = "Admon. Perfiles";
    ViewBag.Pageheader = "Opciones de Menu";
}

@section customStyles{
    @Styles.Render("~/bundles/dataTableStyles")
}

<div class="row">
    <div class="col-md-3 col-md-offset-9">
        <a class="btn btn-primary pull-right" href="@Url.Action("Create", "Perfil")"><i class="fa fa-fw fa-plus"></i> Agregar</a>
    </div>
</div>
<br />
<div class="row">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="col-md-4 col-md-offset-4">
            <div class="alert alert-success alert-dismissable">
                <button class="close" aria-hidden="true" type="button" data-dismiss="alert">×</button>
                @ViewBag.SuccessMessage
            </div>
        </div>
    }
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered table-hover table-condesed data">
                <thead>
                    <tr role="row">
                        <th>
                            @Html.DisplayNameFor(model => model.id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.perfil)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.perfil)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Perfil", new { id = item.id })" title="" class="btn btn-primary btn-xs action"
                               data-original-title="Editar" data-toggle="tooltip" data-placement="top">
                                <i class="fa fa-fw fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", "Perfil", new { id = item.id })" title="" class="btn btn-primary btn-xs action"
                               data-original-title="Detalles" data-toggle="tooltip" data-placement="top">
                                <i class="fa fa-fw fa-file"></i>
                            </a>
                            @*Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            *@
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <h3>No hay datos que mostrar</h3>
        }
    </div>
</div>
@section customScripts{
    @Scripts.Render("~/bundles/dataTableScripts")
    <script type="text/javascript">
        $(document).ready(function () {
           $(".data").DataTable({
                responsive: true
            });

            $(".action").tooltip({
                container: "body"
            })
        });
    </script>
}
