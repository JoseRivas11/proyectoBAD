@model proyectoBAD.ViewModels.BitacoraMantenimientoViewModel

@{
    ViewBag.Title = "Admon Bitacora de Mantenimiento";
    ViewBag.PageHeader = "Crear Bitacora de Mantenimiento";
}

<div class="col-md-12">
    @using (Html.BeginForm((String)ViewBag.Action, "BitacoraMantenimiento", FormMethod.Post, htmlAttributes: new { role = "form", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Bitacora de Manteniniento</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            @if (ViewBag.Button == "Editar")
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.idMa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => model.idMa)
                            @Html.HiddenFor(model => model.idMa)
                        </p>
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.detallesMa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.detallesMa, new { htmlAttributes = new { @class = "form-control", rows  = 3 } })
                    @Html.ValidationMessageFor(model => model.detallesMa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.mantenimientoMa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.mantenimientoMa, Model.mantenMa, "Seleccionar...",
                   htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.mantenimientoMa, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.fechaMa, htmlAttributes: new { @class = "control-label col-md-2" } )
                <div class="col-md-7">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar">
                            </i>
                        </div>
                        @Html.TextBoxFor(model => model.fechaMa,
                       htmlAttributes: new
                       {
                           @class = "form-control dPicker",
                           placeholder = "dd/mm/yyyy"
                       }, format: "{0:d}"

                        )
                    </div>
                    @Html.ValidationMessageFor(model => model.fechaMa, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ViewBag.Button" class="btn btn-primary" />
                </div>
            </div>
        </div>

    }

    <div>
        <a href="@Url.Action("Index", "BitacoraDeMantenimiento")" class="btn btn-default">
            <i class="fa fa-fw fa-arrow-left"></i>Volver a la lista de Bitacoras
        </a>
    </div>
</div>
@section customScripts{
    @Scripts.Render("~/bundles/formValidationScripts")
}

<script type="text/javascript">
        $(document).ready(function () {



            $(".dPicker").datepicker({
                language: "es",
                format: "dd/mm/yyyy"
            });


            });;
</script>






