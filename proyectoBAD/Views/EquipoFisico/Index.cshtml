@model IEnumerable<proyectoBAD.ViewModels.EquipoFisicoViewModel>

@{
    ViewBag.Title = "Admon. EquipoFisico";
    ViewBag.PageHeader = "Equipos Físicos";
}


@section customStyles{
    @Styles.Render("~/bundles/dataTableStyles")
}


<div class="row">
    <div class="col-md-3 col-md-offset-9">
        <a class="btn btn-primary pull-right" href="@Url.Action("Create", "EquipoFisico")"><i class="fa fa-fw fa-plus"></i> Agregar</a>
    </div>
</div>
<br />

<div class="row">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="col-md-4 col-md-offset-4">
            <div class="alert alert-success alert-dismissable">
                <button class="close" aria-hidden="true" type="button" data-dismiss="alert">×</button>
                @ViewBag.SuccessMessage
            </div>
        </div>
    }
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered table-hover table-condesed data">
                <thead>
                    <tr role="row">
                        <th>
                            @Html.DisplayNameFor(model => model.numserial)
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Modelo
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fechafabricacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tiempogarantia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.detallesgarantia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.estadogarantia)
                        </th>
                        <th>
                            Institucion
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idDepEquiFisico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idEspEquiFisico)
                        </th>
                       
                        <th><label class="">Opciones</label></th>
                        </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr role="row">
                            <td>
                                @Html.DisplayFor(modelItem => item.numserial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idEspequifi.marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idEspequifi.modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fechafabricacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tiempogarantia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.detallesgarantia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.estadogarantia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.iddepartamento.instituciones.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.iddepartamento.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idEspequifi.equipos.especificaciones)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "EquipoFisico", new { id = item.numserial })" title="" class="btn btn-primary btn-xs action"
                                   data-original-title="Editar" data-toggle="tooltip" data-placement="top">
                                    <i class="fa fa-fw fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "EquipoFisico", new { id = item.numserial })" title="" class="btn btn-primary btn-xs action deleteEquipoFisico"
                                   data-original-title="Eliminar" data-toggle="tooltip" data-placement="top">
                                    <i class="fa fa-fw fa-trash"></i>
                                </a>
                                @*
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>No hay datos que mostrar</h3>
        }
    </div>
</div>

@section customScripts{
    @Scripts.Render("~/bundles/dataTableScripts")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".data").DataTable({
                responsive: true
            });

            $(".action").tooltip({
                container: "body"
            })
         });
    </script>
    <script type="text/javascript">
        $(".deleteEquipoFisico").on("click", function (event) {
            if (!confirm('Esta Seguro de eliminar?')) {
                event.preventDefault();
            }
        });
    </script>
}