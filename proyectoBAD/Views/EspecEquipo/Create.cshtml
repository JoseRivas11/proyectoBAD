                @Html.EditorFor(model => model.MARCAESPEQ, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MARCAESPEQ, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MODELESPEQ, htmlAttributes: new { @class = "control-label col-md-2" })
