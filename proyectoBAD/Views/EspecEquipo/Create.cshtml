                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.IDESPEQ)
                        @Html.HiddenFor(model => model.IDESPEQ)
                    </p>
                </div>
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.MARCAESPEQ, htmlAttributes: new { @class = "control-label col-md-2" })
