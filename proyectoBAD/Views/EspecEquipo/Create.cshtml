@model proyectoBAD.ViewModels.EspecEquipoViewModel

@{
    ViewBag.Title = "Insert Especificación";
    ViewBag.PageHeader = "Crear Especificación";
}

@section customStyles{
    @Styles.Render("~/bundles/dataTableStyles")
}




@using (Html.BeginForm((String)ViewBag.Action, "EspecEquipo", FormMethod.Post, htmlAttributes: new { role = "form", @class = "form" }))
{
